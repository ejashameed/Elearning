@model IEnumerable<BookModel> 

@{ 
    ViewBag.Title = "Get All Books";
}

<div class="container">
    <h5 class="display-4">All Books</h5>
    <div class="row">

        @{ foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="175">
                        </svg>                        
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Book" asp-action="GetBook" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                                <small class="text-muted">@item.Author</small>
                            </div>                                                        
                        </div>
                    </div>
                </div>
            }

        }

        
    </div>
</div>        
