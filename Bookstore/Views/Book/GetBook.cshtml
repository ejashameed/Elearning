@model GetBookViewModel
@{
    ViewData["Title"] = "GetBook";

}

<div class="container">
    <h3 class="h3">Book Details</h3>
    <div class="row">
        <div class="col-md-6">

            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Book.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "") "></li>
                    }                    
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Book.Gallery.Count(); i++)
                    {
                        <div class= "@(i==0 ? "carousel-item active" : "carousel-item")">
                            <img class="img-fluid" src="@Model.Book.Gallery[i].ImageUrl" alt="@Model.Book.Gallery[i].Name">
                        </div>
                    }                    
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <h3 class="h3">@Model.Book.Title</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="text-primary">By: </span>
                    <span class="text-monospace">@Model.Book.Author</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.Book.Description
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="text-primary">Category: </span>
                    <span class="text-monospace">@Model.Book.Category</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="text-primary">Total Pages: </span>
                    <span class="text-monospace">@Model.Book.TotalPages</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">
                        Read now
                    </button>
                </div>
            </div>

        </div>

    </div>
    <p></p>
    <h5>Similar Books</h5>
    <div class="row">
        @{ foreach (var item in Model.SimilarBooks)
           {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/Books/Repro.jpg" class="img-thumbnail" alt="Cinque Terre">
                        
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/Book/GetBook/@item.Id" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                                <small class="text-muted">@item.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
           }
         }
</div>


</div>