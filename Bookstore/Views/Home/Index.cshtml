
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body class="container">
    <h1 class="h1">Welcome to Book Store App</h1>
    <h3 class="h3">@DateTime.Now.ToString("dd-MM-yyyy")</h3>

    <input type="button" class="btn-danger" value="View Summary" />
    @{ 
        for (int i = 0; i < 9; i++)
        {
            @if(i == 5)
            {
                <h1 class="h1">@i</h1>
            }
            else
            { 
                <h3 class="h3">@i</h3>
            }            
            <hr />
        }
    }
</body>
</html>
