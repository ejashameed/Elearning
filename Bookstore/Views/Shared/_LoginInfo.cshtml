@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager;

@if (_signInManager.IsSignedIn(User))
{
    
    <label>Hello @User.Identity.Name</label>  
    

    <form class="form-inline my-2 my-lg-0" method="get">
        <button class="btn-sm btn-outline-info my-1 my-sm-0" type="submit" asp-controller="Account" asp-action="logout">Logout</button>
    </form>
}
else
{
    <form class="form-inline my-2 my-lg-0" method="get">
        <button class="btn-sm btn-outline-info my-1 my-sm-0" type="submit" asp-controller="Account" asp-action="signin">Login</button>
    </form>

    <form class="form-inline my-2 my-lg-0" method="get">
        <button class="btn-sm btn-outline-info my-1 my-sm-0" type="submit" asp-controller="Account" asp-action="signup">Register</button>
    </form>
}

